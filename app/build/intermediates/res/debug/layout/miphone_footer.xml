<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/phone_name_foot"
        style="@style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:singleLine="true"
        android:textColor="@color/primary_text_color" />

    <TextView
        android:id="@+id/phone_price_foot"
        style="@style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"
        android:textColor="@color/highlight_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fcode_buy_miphone"
            style="@style/Widget.Button"
            android:layout_width="0dip"
            android:layout_height="52dip"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_marginRight="10dip"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/buy_miphone"
            style="@style/Widget.Button.Main"
            android:layout_width="0dip"
            android:layout_height="52dip"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/miphone_footer.xml -->