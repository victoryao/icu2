<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/combo_list_item"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/combo_product_photo"
        android:layout_width="87dip"
        android:layout_height="87dip"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginRight="10dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/combo_product_name"
            style="@style/TextAppearance.List.Primary"
            android:layout_marginBottom="10dip"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/combo_choose_style"
            android:layout_width="162dip"
            android:layout_height="@dimen/spinner_height"
            android:layout_below="@+id/combo_product_name"
            android:focusable="false"
            style="@style/Widget.Spinner" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/combo_list_item.xml -->