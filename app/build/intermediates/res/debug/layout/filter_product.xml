<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screening_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:clickable="false"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/bar_title"
        style="@style/TextAppearance.Title.Bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/filter_all"
        style="@style/TextAppearance.Title.Bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/filter_all"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="20dip" >

        <ImageView
            android:id="@+id/choice_phone_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="matrix"
            android:visibility="gone"
            android:src="@drawable/drop_down_instruction_icon" />

        <ImageView
            android:id="@+id/filter_phone_type_img"
            android:layout_width="@dimen/phone_filter_icon_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/filter_product.xml -->