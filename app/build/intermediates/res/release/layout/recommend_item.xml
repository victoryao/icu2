<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_weight="1.0"
    android:background="@drawable/recommend_item_bg"
    android:clickable="true" >

    <ImageView
        android:id="@+id/recommend_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dip"
        android:adjustViewBounds="true"
        android:maxHeight="108dip"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/recommend_item_price"
        style="@style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/recommend_item_image"
        android:layout_centerHorizontal="true"
        android:paddingBottom="6dip"
        android:textColor="@color/highlight_text_color" />

</RelativeLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/recommend_item.xml -->