<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.xms.sales.ui.CategoryListItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.GridView"
    android:gravity="center"
    android:background="@drawable/category_item_bg" >

    <ImageView
        android:id="@+id/category_photo"
        android:layout_width="@dimen/category_photo_size"
        android:layout_height="@dimen/category_photo_size"
        android:clickable="false"
        android:focusable="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_photo"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        style="@style/TextAppearance.List.Primary" />
</com.xiaomi.xms.sales.ui.CategoryListItem><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/category_list_item.xml -->