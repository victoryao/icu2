<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/bottom"
        style="@style/Widget.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/order_bottom_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/submit"
            style="@style/Widget.Button.Main.Shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="27dip"
            android:paddingRight="27dip"
            android:text="@string/order_submit_button_submit" />
    </RelativeLayout>

     <LinearLayout
        android:id="@+id/xianhuoempty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="110dip" 
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dip"
            android:src="@drawable/empty_cartlist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shopping_xianhuolist_is_empty"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dip"
            android:text="@string/shopping_xianhuolist_is_empty_subhead"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/xianhuo_goto_button"
            style="@style/Widget.Button"
            android:paddingBottom="10dip"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingTop="10dip"
            android:text="@string/shopping_xianhuolist_is_empty_button_title"
            android:textSize="@dimen/text_size_huge" />
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/sn_input_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dip" 
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sn" />
        
        <TextView
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:text="@string/sn_unknown_info"
            android:textSize="@dimen/text_size_large" />
        <TextView
            style="@style/Widget.Item.ListView.Label"
            android:text="@string/input_sn_hint" />
         <EditText
	            android:id="@+id/sn_input"
	            style="@style/Widget.EditText"
	            android:layout_gravity="center"
	            android:gravity="center"
                android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:hint="@string/hinit_sn" />
	       
        <Button
            android:id="@+id/sn_ok_button"
            style="@style/Widget.Button.Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="24dip"
            android:text="@string/order_edit_submit" />
       
    </LinearLayout>
     
    
  

</RelativeLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/xianhuo_order_submit_fragment.xml -->