<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.ListView.DoubleLine" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dip">

        <include
            android:id="@+id/action_divider"
            android:layout_alignParentTop="true"
            layout="@layout/horizontal_divider" />

        <ImageView
            android:id="@+id/shopping_cartlist_photo"
            android:layout_width="@dimen/list_icon_size"
            android:layout_height="@dimen/list_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dip"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/item_center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@+id/arrow_right"
            android:layout_toRightOf="@+id/shopping_cartlist_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shopping_cartlist_text_title"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                android:id="@+id/sn"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_size_medium" />
           
            <TextView
                android:id="@+id/shopping_cartlist_text_center"
                style="@style/TextAppearance.Normal.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal" />
            
            
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/btn_next" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/showtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:clickable="false"
        android:focusable="false"/>

</FrameLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/xianhuo_shopping_cartlist.xml -->