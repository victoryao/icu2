<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/reg_ok_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="22dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mark" />

                <TextView
                    android:id="@+id/title_tv"
                    style="@style/TextAppearance.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:text="@string/sale_out_register_ok"
                    android:textColor="@color/green_title"
                    android:textSize="32dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sale_out_reg" />

            <TextView
                style="@style/TextAppearance.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="20dp"
                android:text="@string/sale_out_register_des"
                android:textColor="@color/highlight_text_color_inverse"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:id="@+id/recommend_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:orientation="horizontal"
                android:visibility="gone" />

            <Button
                android:id="@+id/see_more"
                style="@style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="12dip"
                android:text="@string/see_more"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </ScrollView>

    <com.xiaomi.xms.sales.widget.EmptyLoadingView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center" />

</FrameLayout>