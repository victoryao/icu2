<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >

    <Button
        android:id="@+id/hide_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hide_button"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:background="@drawable/show_style_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="12.5dip"
            android:layout_marginBottom="11dip"
            android:layout_marginRight="10dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/choose_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="16dip"
            android:layout_marginRight="20dip"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/choose_style_view.xml -->