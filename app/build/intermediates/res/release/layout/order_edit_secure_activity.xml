<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip" >

    <TextView
        android:id="@+id/prompt_send_text"
        style="@style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/order_edit_prompt_message"
        android:textColor="@color/primary_text" />

    <RelativeLayout
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prompt_send_text"
        android:layout_marginTop="10dip" >

        <EditText
            android:id="@+id/secure_authentication"
            style="@style/Widget.EditText"
            android:layout_width="185dip"
            android:layout_height="52dip"
            android:layout_alignParentLeft="true"
            android:hint="@string/order_erification_code"
            android:inputType="number" />

        <Button
            android:id="@+id/send_message_btn"
            style="@style/Widget.Button"
            android:layout_width="145dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/secure_authentication"
            android:text="@string/order_send_message_submit"
            android:textColor="@color/primary_text" />
    </RelativeLayout>

    <Button
        android:id="@+id/submit"
        style="@style/Widget.Button.Main"
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:layout_below="@+id/input_view"
        android:layout_marginTop="20dip"
        android:text="@string/order_submit" />

    <TextView
        android:id="@+id/prompt_user"
        style="@style/TextAppearance.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="12dip"
        android:text="@string/order_edit_prompt"
        android:textColor="@color/secondary_text" />

</RelativeLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/order_edit_secure_activity.xml -->