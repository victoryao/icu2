<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.xms.sales.ui.ProductListItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.GridView"
    android:background="@drawable/product_item_bg" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13dip" >

        <RelativeLayout
            android:id="@+id/product_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dip" >

            <ImageView
                android:id="@+id/product_photo"
                android:layout_width="@dimen/product_photo_size"
                android:layout_height="@dimen/product_photo_size"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/product_name"
                style="@style/TextAppearance.List.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_photo"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name" >

                <TextView
                    android:id="@+id/product_price"
                    style="@style/TextAppearance.List.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="5dip" />

                <TextView
                    android:id="@+id/marketPrice"
                    style="@style/TextAppearance.List.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/product_photo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@drawable/product_label_tehui" />
    </FrameLayout>

</com.xiaomi.xms.sales.ui.ProductListItem>