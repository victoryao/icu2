<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.xms.sales.ui.AddressListItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.ListView"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/address_infomation"
        android:paddingRight="5dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/arrow_right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/address_area"
            style="@style/TextAppearance.List.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:singleLine="true" />

        <TextView
            android:id="@+id/address"
            style="@style/TextAppearance.List.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/address_consignee"
            style="@style/TextAppearance.List.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:singleLine="true" />
    </LinearLayout>

</com.xiaomi.xms.sales.ui.AddressListItem>