<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.xms.sales.ui.OrderViewProductItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Item.ListView.TrebleLine"
    android:background="@drawable/order_view_body"
    android:paddingTop="0dip"
    android:paddingBottom="0dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:gravity="center_vertical" >

    <include
        android:id="@+id/action_divider"
        android:layout_alignParentTop="true"
        layout="@layout/horizontal_divider" />

    <ImageView
        android:id="@+id/product_photo"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/product_photo"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/product_title"
            style="@style/TextAppearance.List.Primary"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/product_price"
            style="@style/TextAppearance.List.Secondary"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/product_sum"
            style="@style/TextAppearance.List.Secondary"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</com.xiaomi.xms.sales.ui.OrderViewProductItem><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/order_view_product_item.xml -->