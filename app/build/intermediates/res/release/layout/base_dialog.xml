<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_window_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="25dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="25dip" >

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.Title.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="15dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/message"
            style="@style/TextAppearance.Normal.Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="25dip" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/negative"
            style="@style/Widget.Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <View
            android:id="@+id/button_padding"
            android:layout_width="@dimen/list_item_padding"
            android:layout_height="1dip"
            android:visibility="gone" />

        <Button
            android:id="@+id/positive"
            style="@style/Widget.Button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/yaoqiang/AndroidStudioProjects/icu/app/src/main/res/layout/base_dialog.xml -->